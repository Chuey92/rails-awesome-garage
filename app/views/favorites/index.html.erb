<h1>My Garage (Favorites)</h1>
<% if @favorites.any? %>
  <% @favorites.each do |favorite| %>
    <div class="favorite-item card mb-3">
      <div class="card-body">
        <h3 class="card-title"><%= favorite.car.brand %> <%= favorite.car.model %></h3>
        <p><strong>Year:</strong> <%= favorite.car.year %></p>
        <p><strong>Fuel Type:</strong> <%= favorite.car.fuel %></p>
        <%= link_to 'View Details', car_path(favorite.car), class: 'btn btn-primary' %>
        <%= button_to 'Remove from Garage', favorite_path(favorite), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No cars in your garage yet. Add some cars to your favorites!</p>
<% end %>

<div class="mt-4">
  <%= link_to 'Back to All Cars', cars_path, class: 'btn btn-secondary' %>
</div>
